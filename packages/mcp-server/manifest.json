{
  "dxt_version": "0.1",
  "name": "@runloop/api-client-mcp",
  "version": "0.53.0",
  "description": "The official MCP Server for the Runloop API",
  "author": {
    "name": "Runloop",
    "email": "support@runloop.ai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runloopai/api-client-ts.git"
  },
  "homepage": "https://github.com/runloopai/api-client-ts/tree/main/packages/mcp-server#readme",
  "documentation": "https://runloop.ai",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/index.js"
      ],
      "env": {
        "RUNLOOP_API_KEY": "${user_config.RUNLOOP_API_KEY}"
      }
    }
  },
  "user_config": {
    "RUNLOOP_API_KEY": {
      "title": "bearer_token",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": [
    "api"
  ]
}
